//https://leetcode.com/problems/maximum-subarray/

class Solution {
public:
    int maxSubArray(vector<int>& nums) {
        int curSum=0,maxTillNow=nums[0];
        for(int i=0;i<nums.size();i++)
        {
            curSum+=nums[i];
            
            if(curSum>maxTillNow)
            maxTillNow=curSum;
            
            if(curSum<0){
                curSum=0;
            }
        }
        return maxTillNow;
    }
};
